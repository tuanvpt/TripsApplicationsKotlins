<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.update.UpdateFragment">

    <FrameLayout
        android:id="@+id/remote_video_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        tools:layout_editor_absoluteX="-47dp"
        tools:layout_editor_absoluteY="0dp">


    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/local_video_view_container"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/layout_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/iBtnCam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cameraswitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/local_video_view_container" />

    <ImageButton
        android:id="@+id/iBtnVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_videocam_off"
        app:layout_constraintEnd_toStartOf="@+id/iBtnCam"
        app:layout_constraintTop_toBottomOf="@+id/local_video_view_container" />

    <ImageButton
        android:id="@+id/iBtnAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mic_off"
        app:layout_constraintEnd_toStartOf="@+id/iBtnVideo"
        app:layout_constraintTop_toBottomOf="@+id/local_video_view_container" />

    <Button
        android:id="@+id/btnLeave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remote_video_view_container"
        android:layout_alignEnd="@id/remote_video_view_container"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/btn_leave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remote_video_view_container"
        android:layout_alignEnd="@id/remote_video_view_container"
        android:layout_margin="@dimen/_20sdp"
        android:text="chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLeave"
        app:layout_constraintStart_toEndOf="@+id/btnJoin" />

    <Button
        android:id="@+id/btnJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remote_video_view_container"
        android:layout_alignStart="@id/remote_video_view_container"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/btn_join"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
